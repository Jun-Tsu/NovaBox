<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/dark_background"
            android:padding="2dp"
            android:gravity="center_horizontal">

            <!-- Latest Movies Section -->
            <TextView
                android:id="@+id/latestSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/bottom_nav_icon_color"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/latestMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <!-- Featured Movies Section -->
            <TextView
                android:id="@+id/featuredSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/bottom_nav_icon_color"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featuredMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <!-- Best Movies Section -->
            <TextView
                android:id="@+id/bestSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/bottom_nav_icon_color"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bestMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <!-- Others Movies Section -->
            <TextView
                android:id="@+id/othersSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/bottom_nav_icon_color"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/othersMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <!-- Action Movies Section -->
            <TextView
                android:id="@+id/actionSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/bottom_nav_icon_color"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/actionMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <!-- Sci-Fi Movies Section -->
            <TextView
                android:id="@+id/scifiSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sci-Fi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/bottom_nav_icon_color"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scifiMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <!-- Hot Movies Section -->
            <TextView
                android:id="@+id/hotSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/bottom_nav_icon_color"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hotMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <!-- PG Movies Section -->
            <TextView
                android:id="@+id/eighteenSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PG"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/bottom_nav_icon_color"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/eighteenMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <!-- Top Rated Movies Section -->
            <TextView
                android:id="@+id/ratedSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Rated"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/bottom_nav_icon_color"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ratedMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>